{
    "name": "vue3-vite-typescript-starter",
    "description": "Simple fast starter for developing with Vue 3 and Typescript in Vite. (With Lint & Prettier tools)",
    "private": false,
    "version": "0.3.0",
    "type": "module",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aekovalev/vue3-vite-typescript-starter.git"
    },
    "keywords": [
        "vue",
        "vue3",
        "typescript",
        "ts",
        "vite"
    ],
    "author": "Alexey Kovalev",
    "bugs": {
        "url": "https://github.com/aekovalev/vue3-vite-typescript-starter/issues"
    },
    "homepage": "https://github.com/aekovalev/vue3-vite-typescript-starter#readme",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build",
        "preview": "vite preview",
        "lint:scripts": "eslint --ext .ts,vue .",
        "lint:styles": "stylelint src/**/*.{css,scss,vue}",
        "lint:markup": "vue-tsc --noEmit",
        "format": "prettier -w -u ."
    },
    "pre-commit": [
        "pnpm lint:markup",
        "pnpm lint:scripts",
        "pnpm lint:styles",
        "pnpm format"
    ],
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "dependencies": {
        "vue": "^3.2.45"
    },
    "devDependencies": {
        "@rushstack/eslint-patch": "^1.2.0",
        "@types/node": "^18.13.0",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "@vitejs/plugin-vue": "^4.0.0",
        "@vue/eslint-config-prettier": "^7.0.0",
        "@vue/eslint-config-typescript": "^11.0.2",
        "eslint": "^8.34.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-unicorn": "^45.0.2",
        "eslint-plugin-vue": "^9.9.0",
        "postcss-html": "^1.5.0",
        "pre-commit": "^1.2.2",
        "prettier": "^2.8.4",
        "sass": "^1.58.0",
        "stylelint": "^15.1.0",
        "stylelint-config-recommended": "^10.0.1",
        "stylelint-config-recommended-scss": "^9.0.0",
        "stylelint-config-recommended-vue": "^1.4.0",
        "stylelint-config-standard": "^30.0.1",
        "typescript": "^4.9.3",
        "vite": "^4.1.0",
        "vue-tsc": "^1.0.24"
    }
}
